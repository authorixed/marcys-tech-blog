<h2>Your Dashboard</h2>
<button id="new-post">New Post</button>
<div id="post-form" style="display: none;">
    <input type="text" id="post-title" placeholder="Post Title" required>
    <textarea id="post-content" placeholder="Your content here..." required></textarea>
    <button id="save-post">Save</button>
</div>

{{#each posts}}
<div class="post">
    <h3>{{this.title}}</h3>
    <p>{{this.content}}</p>
    <button class="edit-post" data-id="{{this.id}}">Edit</button>
    <button class="delete-post" data-id="{{this.id}}">Delete</button>
</div>
{{/each}}

<script src="/js/blog.js"></script>